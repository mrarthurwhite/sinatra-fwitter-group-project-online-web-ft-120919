<h1>Edit New tweet</h1>
<form action="/missions/<%= @mission.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div>
    <label for="missioncontent">Content: </label>
    <input type="text" name="content" id="missioncontent" value="<%= @mission.content %>">
  </div>
  <input type="submit" value="submit">
</form>

<form action="/missions/<%= @mission.id%>" method="post">
  <input type="hidden" name="_method" value="delete">

  <input type="submit" name="delete" value="Delete Mission">
</form>